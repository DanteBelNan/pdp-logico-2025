{
	"name": "Prolog Environment",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"arthurwang.vsc-prolog" 
			],
			"settings": {
				"terminal.integrated.defaultProfile.linux": "zsh",
				"prolog.executablePath": "/usr/bin/swipl"
			}
		}
	},
	"remoteUser": "vscode"
}